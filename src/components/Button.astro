---
const { href, title, label, emoji } = Astro.props;
---

<a
	href={href}
	title={title}
	class="rounded-lg text-md bg-fuchsia-700 text-white font-medium font-display p-3 hover:bg-purple-900 duration-300 transition-colors ease-in-out group inline-flex items-center gap-1"
	><span>{label}</span>
	{
		emoji && (
			<span class="group-hover:rotate-12 block duration-300 ease-in-out">
				{emoji}
			</span>
		)
	}</a
>
